<Page
    x:Class="FastOrdering.View.NewOrderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FastOrdering.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:misc="using:FastOrdering.Misc"
    xmlns:drawerLayout="using:DrawerLayout"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Title Bar -->
        <Grid x:Name="TitleBar" Background="#00ADEF" Grid.Row ="0" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image x:ConnectionId='7' x:Name="DrawerIcon" Grid.Column="0" Source="/Assets/LinesWhite.png" HorizontalAlignment="Left"                           />
            <TextBlock Grid.Column="1" Text="Commander" Foreground="White" VerticalAlignment="Center" FontSize="18"/>
        </Grid>
        <!-- Drawer Layout -->
        <drawerLayout:DrawerLayout x:Name="DrawerLayout" Grid.Row="1" Style="{StaticResource LayoutGridStyle}">
            <Hub x:ConnectionId='1' x:Name="OrderHub" Foreground="Black" Margin="0, 40, 0, 0"                                                  >
                <HubSection x:Name="SendOrderHubSection">
                    <HubSection.Header>
                        <TextBlock Text="Commande" FontSize="40" Margin="0, 0, 0, -50" />
                    </HubSection.Header>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Padding="20" Background="White" Opacity="0.9" CornerRadius="5" Margin="30, 50, 30, 50">
                                <Grid x:Name="ContentPanel">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Commande #1" Foreground="Black" FontSize="20" />
                                    <Grid Grid.Row="1" Margin="0,10,0,0" DataContext="{Binding Ord}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="Table #" Foreground="Black" FontSize="20" VerticalAlignment="Center" />
                                        <TextBox Grid.Column="1" FontSize="20" BorderBrush="Black" InputScope="Number"
                                                 Text="{Binding numTable, Mode=TwoWay}" />
                                        <TextBlock Grid.Column="2" Text="Pax" Foreground="Black" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" />
                                        <TextBox Grid.Column="3" FontSize="20" BorderBrush="Black" InputScope="Number"
                                                 Text="{Binding numPA, Mode=TwoWay}" />
                                    </Grid>
                                </Grid>
                            </Border>

                            <Border Grid.Row="1" Padding="20" Background="White" Opacity="0.9" CornerRadius="5" Margin="30, 0, 30, 50">
                                <Grid x:Name="ContentPanel2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="1" Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                    <ListBox>
                                        <TextBlock Foreground="Black" VerticalAlignment="Center" FontSize="14">1x Steak au poivre</TextBlock>
                                        <TextBlock Foreground="Black" VerticalAlignment="Center" FontSize="14">2x Bière</TextBlock>
                                    </ListBox>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </HubSection>

                <HubSection x:Name="AlacarteHubSection">
                    <HubSection.Header>
                        <TextBlock Text="A la carte" FontSize="40" Margin="0, 0, 0, -50" />
                    </HubSection.Header>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Padding="20" Background="White" Opacity="0.9" CornerRadius="5" Margin="30, 50, 30, 0">
                                <Grid x:Name="ContentPanel">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <ToggleSwitch x:ConnectionId='5' Grid.Row="0" OnContent="Cacher" OffContent="Afficher" Foreground="Black"
                                                                              >
                                        <ToggleSwitch.Header>
                                            <TextBlock Text="Entrées" FontSize="20" Foreground="Black" />
                                        </ToggleSwitch.Header>
                                    </ToggleSwitch>
                                    <ListView Grid.Row="1" x:Name="EntryList" Visibility="Collapsed"
                                              ItemsSource="{Binding Entries}">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding}" FontSize="14"
                                                               VerticalAlignment="Center" Margin="15, 0, 0, 0" />
                                                    <TextBox InputScope="Number" Text="0" Grid.Row="0" Grid.Column="1" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>

                                    <ToggleSwitch x:ConnectionId='6' Grid.Row="2" OnContent="Cacher" OffContent="Afficher" Foreground="Black"
                                                                             >
                                        <ToggleSwitch.Header>
                                            <TextBlock Text="Plats" FontSize="20" Foreground="Black" />
                                        </ToggleSwitch.Header>
                                    </ToggleSwitch>
                                    <ListView Grid.Row="3" x:Name="DishList" Visibility="Collapsed"
                                              ItemsSource="{Binding Dishes}">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding}" FontSize="14"
                                                               VerticalAlignment="Center" Margin="15, 0, 0, 0" />
                                                    <TextBox InputScope="Number" Text="0" Grid.Row="0" Grid.Column="1" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </HubSection>

                <HubSection x:Name="MenusHubSection">
                    <HubSection.Header>
                        <TextBlock Text="Menus" FontSize="40" Margin="0, 0, 0, -50" />
                    </HubSection.Header>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Padding="20" Background="White" Opacity="0.9" CornerRadius="5"
                                    Margin="30, 50, 30, 50">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <ToggleSwitch x:ConnectionId='2' Grid.Row="0" OnContent="Mousaillon" OffContent="Mousaillon" Foreground="Black"
                                                                             >
                                    </ToggleSwitch>
                                    <ListView Grid.Row="1" x:Name="MenuList" Visibility="Collapsed">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="Entrées + Plats" FontSize="18"
                                                       VerticalAlignment="Center" Margin="20, 10, 0, 0"/>
                                            <TextBlock Grid.Row="1" Text="Plats + Desserts" FontSize="18"
                                                       VerticalAlignment="Center" Margin="20, 20, 0, 20"/>
                                        </Grid>
                                    </ListView>
                                    <TextBlock Grid.Row="2" Text="Pirate" FontSize="25" />
                                    <Grid x:Name="ContentPanel" Grid.Row="3" Visibility="Collapsed">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <ToggleSwitch x:ConnectionId='3' Grid.Row="0" OnContent="Cacher" OffContent="Afficher" Foreground="Black"
                                                                              >
                                            <ToggleSwitch.Header>
                                                <TextBlock Text="Entrées" FontSize="20" Foreground="Black" />
                                            </ToggleSwitch.Header>
                                        </ToggleSwitch>
                                        <ListView Grid.Row="1" x:Name="EntryList" Visibility="Collapsed"
                                              ItemsSource="{Binding Entries}">
                                            <ListView.ItemContainerStyle>
                                                <Style TargetType="ListViewItem">
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                </Style>
                                            </ListView.ItemContainerStyle>
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding}" FontSize="14"
                                                               VerticalAlignment="Center" Margin="15, 0, 0, 0" />
                                                        <TextBox InputScope="Number" Text="0" Grid.Row="0" Grid.Column="1" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>

                                        <ToggleSwitch x:ConnectionId='4' Grid.Row="2" OnContent="Cacher" OffContent="Afficher" Foreground="Black"
                                                                             >
                                            <ToggleSwitch.Header>
                                                <TextBlock Text="Plats" FontSize="20" Foreground="Black" />
                                            </ToggleSwitch.Header>
                                        </ToggleSwitch>
                                        <ListView Grid.Row="3" x:Name="DishList" Visibility="Collapsed"
                                              ItemsSource="{Binding Dishes}">
                                            <ListView.ItemContainerStyle>
                                                <Style TargetType="ListViewItem">
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                </Style>
                                            </ListView.ItemContainerStyle>
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid HorizontalAlignment="Stretch">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding}" FontSize="14"
                                                               VerticalAlignment="Center" Margin="15, 0, 0, 0" />
                                                        <TextBox InputScope="Number" Text="0" Grid.Row="0" Grid.Column="1" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </HubSection>
            </Hub>

            <Grid>
                <!--<misc:MyMenu />-->
            </Grid>
        </drawerLayout:DrawerLayout>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='8' x:Name="SendOrderButton" Icon="Send" Label="Envoyer"                   />
            <AppBarButton x:ConnectionId='9' x:Name="AddMenusElementsButton" Icon="Add" Label="Ajouter"                          />
            <AppBarButton x:ConnectionId='10' x:Name="AddElementsButton" Icon="Add" Label="Ajouter"                     />
        </CommandBar>
    </Page.BottomAppBar>
</Page>

