<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eip.fastordering.NotificationsFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/notification_bg"
        android:contentDescription="@string/login_activity_bg"
        android:src="@drawable/bg"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_list"
        android:background="#DDDDDD"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:background="@drawable/rect_rouge"
        android:id="@+id/notification_rectangle_red"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/notification_list"
        android:layout_alignEnd="@+id/notification_list"
        android:layout_alignLeft="@+id/notification_list"
        android:layout_alignStart="@+id/notification_list"
        android:layout_marginBottom="15dp"
        android:clickable="true">
    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TOUT EFFACER"
        android:id="@+id/notification_clean_text"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/notification_rectangle_red"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

</RelativeLayout>
