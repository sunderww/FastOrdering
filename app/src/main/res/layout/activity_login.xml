<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eip.fastordering.LoginActivity"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:id="@+id/layout_login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img_bg"
        android:contentDescription="@string/login_activity_bg"
        android:src="@drawable/bg"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/white_rect"
        android:layout_height="250dp"
        android:layout_width="300dp"
        android:src="@drawable/rect"
        android:contentDescription="@string/desc_white_rectangle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_identifiant"
        android:id="@+id/text_login"
        android:layout_alignTop="@+id/white_rect"
        android:layout_alignLeft="@+id/white_rect"
        android:layout_alignStart="@+id/white_rect"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="22dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/field_login"
        android:hint="@string/hint_login"
        android:layout_below="@+id/text_login"
        android:layout_alignLeft="@+id/connexion_button"
        android:layout_alignStart="@+id/connexion_button"
        android:layout_alignRight="@+id/connexion_button"
        android:layout_alignEnd="@+id/connexion_button"
        android:layout_marginTop="0dp"
        android:inputType="text"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_pass"
        android:id="@+id/text_pass"
        android:layout_below="@+id/field_login"
        android:layout_alignLeft="@+id/text_login"
        android:layout_alignStart="@+id/text_login"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/field_pass"
        android:hint="@string/login_hint_pass"
        android:layout_below="@+id/text_pass"
        android:layout_alignLeft="@+id/field_login"
        android:layout_alignStart="@+id/field_login"
        android:layout_marginTop="0dp"
        android:layout_alignRight="@+id/connexion_button"
        android:layout_alignEnd="@+id/connexion_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_button"
        android:id="@+id/connexion_button"
        android:layout_alignBottom="@+id/white_rect"
        android:layout_alignLeft="@+id/white_rect"
        android:layout_alignStart="@+id/white_rect"
        android:layout_alignRight="@+id/white_rect"
        android:layout_alignEnd="@+id/white_rect"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_logo"
        android:src="@drawable/logo"
        android:layout_toEndOf="@+id/text_login"
        android:layout_above="@+id/white_rect"
        android:layout_alignLeft="@+id/white_rect"
        android:layout_alignStart="@+id/white_rect"
        android:layout_alignRight="@+id/white_rect"
        android:layout_alignEnd="@+id/white_rect"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/desc_view_logo" />

</RelativeLayout>
