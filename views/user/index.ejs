<body class="dashboard-page sb-l-o sb-r-c">

    <!-- Start: Main -->
    <div id="main">

        <% include ../header.ejs %>
        <% include ../sidebar.ejs %>

        <!-- Start: Content-Wrapper -->
        <section id="content_wrapper">



            <!-- Start: Topbar -->
            <header id="topbar">
                <div class="topbar-left">
                    <ol class="breadcrumb">
                        <li class="crumb-active">
                            <a href="dashboard">Options</a>
                        </li>
                        <li class="crumb-icon">
                            <a href="dashboard">
                                <span class="glyphicon glyphicon-home"></span>
                            </a>
                        </li>
                        <li class="crumb-link">
                            <a href="dashboard">Accueil</a>
                        </li>
                        <li class="crumb-trail">Gérer les utilisateurs</li>
                    </ol>
                </div>

            </header>
            <!-- End: Topbar -->



            <!-- Begin: Content -->
            <section id="content" class="animated fadeIn">
                <!-- Dashboard Tiles -->

                <section id="content" class="animated fadeIn">
                    <div class="row table-layout" id="modal-content">
                        <div class="container">
                            <h3>Utilisateur</h3>
                            <table class="table">
                                <tr>
                                    <td>Email</td>
                                    <td>Clé</td>
                                    <td>Role</td>
                                    <td>Date de création</td>
                                </tr>
                                <% _.each(users, function(user) { %>
                                <tr data-id="<%= user.id %>" data-model="user">
                                    <td><%= user.email %></td>
                                    <% if (user.key) { %>
                                    <td><%= user.key.code %></td>
                                    <% } else { %>
                                    <td></td>
                                    <% } %>
                                    <td><%= user.role %></td>
                                    <td><%= user.createdAt %></td>
                                    <td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Editer</a></td>
                                    <% if (user.role != 4) { %>
                                    <td><a href="/user/destroy/<%= user.id %>" class="btn btn-sm btn-danger">Supprimer</a></td> 
                                    <% } %>
                                </tr>
                                <% }) %>
                            </table>
                        </div>
                    </div>
                    
                    <div class="row table-layout" id="modal-content">
                        <div class="container">
                            <h3>Clés</h3>
                            <table class="table">
                                <tr>
                                    <td>Code</td>
                                </tr>
                                <% _.each(keys, function(key) { %>
                                <tr data-id="<%= key.id %>" data-model="key">
                                    <td><%= key.code %></td>
                                    <td><a href="/key/<%= key.id %>/activate" class="btn btn-sm btn-success">Activer</a></td>
                                </tr>
                                <% }) %>
                            </table>
                        </div>
                    </div>
                    <% if (session.user && session.user.role == 4) { %>
                    <div>
                        <a href="/user/create_key" class="btn btn-sm btn-success">Ajouter une clé</a>
                    </div>
                    <% } %>
                </section>
            </section>

            <!-- End: Main -->

            <!-- BEGIN: PAGE SCRIPTS -->

