    <!-- Bootstrap -->
    <script type="text/javascript" src="/assets/js/bootstrap/bootstrap.min.js"></script>

    <!-- Page Plugins -->
    <script type="text/javascript" src="/vendor/plugins/magnific/jquery.magnific-popup.js"></script>

    <!-- Admin Forms Javascript -->
    <script type="text/javascript" src="/assets/admin-tools/admin-forms/js/jquery-ui-monthpicker.min.js"></script>
    <script type="text/javascript" src="/assets/admin-tools/admin-forms/js/jquery-ui-timepicker.min.js"></script>
    <script type="text/javascript" src="/assets/admin-tools/admin-forms/js/jquery-ui-touch-punch.min.js"></script>
    <script type="text/javascript" src="/assets/admin-tools/admin-forms/js/jquery.spectrum.min.js"></script>
    <script type="text/javascript" src="/assets/admin-tools/admin-forms/js/jquery.stepper.min.js"></script>

    <!-- Theme Javascript -->
    <script type="text/javascript" src="/assets/js/utility/utility.js"></script>
    <script type="text/javascript" src="/assets/js/main.js"></script>
    <script type="text/javascript" src="/assets/js/demo.js"></script>
    <script type="text/javascript">
    jQuery(document).ready(function() {

        "use strict";

            // Init Theme Core     
            Core.init();

            // Init Demo JS

            Demo.init();

            $(".delete-composition").click(function(e){
                console.log($(this).attr("id-composition"));
                io.socket.post('/menucomposition/delete', {id:$(this).attr("id-composition")});
                $(this).parent().remove();            
            });

            $("#add-one").click(function(e){
                e.preventDefault();
                console.log($(this).hasClass("a-valider"));
                if ($(this).hasClass("a-valider")) {
                    var name = $(".add-one .composition-name").val();
                    var price = $(".add-one .composition-price").val();
                    var categories_ids = $(".add-one .composition-categories").val();
                    var res =  io.socket.post('/menucomposition/create', 
                        {menu_id:"<%= menu.id %>",
                        name:name,
                        price:price, 
                        categories_ids:categories_ids});   

                    io.socket.get('/menucomposition/read?id=<%= menu.id %>', function (body, response) {

                        body = body.elements;$("#composition-menu").empty();

                        for (var i = 0; i < body.length; i++) {
                            $("#composition-menu").append('<div>' + body[i].name + '<span class="delete-composition" id-composition="' + body[i].id  +'" style="float:right !important">Supprimer</span></div>');
                        };

                    });

                    $(this).text("Ajouter une composition");
                    $(":input [name=name]").val("");
                    $(":input [name=price]").val("");
                    $("option:selected").removeAttr("selected");    
                    $(this).removeClass("a-valider");
                    $(this).removeClass("btn-success");
                    $(this).addClass("btn-info");
                    $(".add-one").hide();
                    return ;
                }
                else {
                    $(this).text("Valider la composition");
                    $(this).addClass("a-valider");
                    $(this).removeClass("btn-info");
                    $(this).addClass("btn-success");
                    $(".add-one").show();
                }
                $(".add-one").html($(".hidden-compo-form").html());
            });

io.socket.get('/dishcategory/read', function (body, response) {
    var res = "";
    body = body.elements;
    for (var i = body.length - 1; i >= 0; i--) {
        res += '<option value="' + body[i].id +'">' + body[i].name +'</option>';
    };
    $(".composition-categories").html(res);
});
});
</script>